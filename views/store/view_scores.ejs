<meta http-equiv="refresh" content="10">
<html>
    <style>
        * {
            font-family: -apple-system, BlinkMacSystemFont, sans-serif;
            background-color: black;
        }
        table{
            background-color: black;
            width: 90%;
            align-content: center;
            border-collapse: collapse;
        }
        th, h1 {
            color: blue;
        }
        td {
            color: white;
        }
        .content td{
            border: 1px grey;
            border-left: 1px grey;
            border-bottom: 1px grey;
            border-right: 1px grey;
            border-top: 1px grey;
        }
        @media (min-width: 300px) {
        th {
            /* Since color is in min-width: 300px it will follow all the other sizes upwards */
            padding-top: 5px;
            padding-bottom: 5px;
        }
        th,td {
            width: calc(598px /7);
            text-align: center;
            padding-top: 5px; 
            padding-bottom: 5px;
        }
        th:first-child {
            padding-left: 30px;
            padding-right: 25px;
        }
    }
    @media (min-width: 600px) {
        th, td {
            width: calc(768px / 6);
        }
    }

    @media (min-width: 768px) {
        th,td {
            width: calc(768px / 6);
        }
    }
    @media (min-width: 768.02px) {
        th, td {
            width: calc(1024px / 6);
        }
    }
    @media (min-width: 1024px) {
        th,td {
            width: calc(1024px / 6);
        }
    }
    @media (min-width: 1024.02px) {
        th, td {
            width: calc(1200px / 6);
        }
    }
    @media (min-width: 1200px) {
        th,td {
            width: calc(1600px / 6);
        }
    }
    @media (min-width: 1600.02px) {
        th, td {
            width: calc(2000px / 6);
            /* Simple hack for screen larger than 1600 pixels but smaller than 2000 */
        }
    }
    @media (min-width: 2000.02px) {
        th, td {
            width: calc(2400px / 6);
        }
    #page-container {
        position: relative;
        min-height: 90vh;
    }

    #content-wrap {
        padding-bottom: 2.5rem;    /* Footer height */
    }

    #footer {
        position: absolute;
        bottom: 0;
        width: 100%;
        height: 2.5rem;            /* Footer height */
        color: white;
        background-color: black;
    }
}
    </style>
    <head>
        <h1>Student Progress Check Scores</h1>
        <form action="/store/download" method="post">
            <input type="submit" value="Download Scores" />
        </form>
    </head>
    <body>
        <div id="page-container">
            <div id="content-wrap">
                <table>
                    <tr>
                        <th>Name</th>
                        <th>Jumping Jacks</th>
                        <th>Pushups</th>
                        <th>Mountain Climbers</th>
                        <th>Sit Ups</th>
                        <th>Front Kicks</th>
                    </tr>
                </table>
                <table class="content">
                    <% if (data) { %>
                        <!-- Using a for-loop to loop over each row in the database.
                        The 'data' variable is passed from the store.js during the response.render function call -->
                            <% data.forEach(function(item){ %>
                                <tr>
                                    <td><%= item.student_name %></td>
                                    <td><%= item.jumping_jacks %></td>
                                    <td><%= item.pushups %></td>
                                    <td><%= item.situps %></td>
                                    <td><%= item.mtn_climbers %></td>
                                    <td><%= item.front_kicks %></td>
                                </tr>
                            <% }) %>
                        <% } %>
                </table>
                </div>
                <footer id="footer">
                    Intellectual property of Chandler de Spirlet.
                </footer>
        </div>
    </body>
</html>