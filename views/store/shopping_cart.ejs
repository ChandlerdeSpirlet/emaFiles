                        <option value="4">4</option>
                        <option value="5">5</option>
                        <option value="6">6</option>
                    </select>
                    </div>
                    <div class="select-wrapper"><select id="select" name="color1" required>
                        <option value="None">Color</option>
                        <option value="Black">Black</option>
                        <option value="White">White</option>
                    </select>
                    </div>
                    <div class="select-wrapper"><select id="select" name="size1" required>
                        <option value="default">Choose Size</option>
                        <optgroup label="Youth Sizes">
