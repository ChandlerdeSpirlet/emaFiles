        </footer>
    </body>
</html>
<script>
    function ValidateForm(){
        var fname = document.forms["Form"]["fname"].value;
        var lname = document.forms["Form"]["lname"].value;
        var email = document.forms["Form"]["email"].value;
        var phone = document.forms["Form"]["phone"].value;
        var rank = document.forms["Form"]["belts"].value;
        var fname = document.forms["Form"]["fname"].value;
        var day = document.forms["Form"]["day_time"].value;
        if (fname == null || fname == ""){
            alert("First name is required and must contain at least two letters.");
            return false;
        }
        if (lname == null || lname == ""){
            alert("Last name is required and must contain at least two letters.");
            return false;
        }
        if (email == null || email == ""){
            alert("An email is required. We use this in case we need to contact you.");
            return false;
        }
        if (rank == "blank"){
            alert("Please select a belt color.");
            return false;
        }
        if (day == null || day == ""){
            alert("Please select a day and time.");
            return false;
        }
        return true;
    }
</script>