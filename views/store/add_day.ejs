<% } %>
<style> 
    body {
        font-family: -apple-system, BlinkMacSystemFont, sans-serif;
    }
    input[type=text] {
        width: 130px;
        box-sizing: border-box;
        border: 2px solid #ccc;
        border-radius: 4px;
        font-size: 16px;
        background-color: white;
        background-position: 10px 10px; 
        background-repeat: no-repeat;
        padding: 12px 20px 12px 40px;
        -webkit-transition: width 0.4s ease-in-out;
        transition: width 0.4s ease-in-out;
    }
    
    input[type=text]:focus {
        width: 100%;
    }
    input[type=number] {
        width: 130px;
        box-sizing: border-box;
        border: 2px solid #ccc;
        border-radius: 4px;
        font-size: 16px;
        background-color: white;
        background-position: 10px 10px; 
        background-repeat: no-repeat;
        padding: 12px 20px 12px 40px;
        -webkit-transition: width 0.4s ease-in-out;
        transition: width 0.4s ease-in-out;
    }
    
    input[type=number]:focus {
        width: 100%;
    }
    [type=submit] {
    background-color: blue; /* Green */
    border: none;
    color: white;
    padding: 16px 32px;
    text-align: center;
    text-decoration: none;
    display: inline-block;
    font-size: 16px;
    margin: 4px 2px;
    -webkit-transition-duration: 0.4s; /* Safari */
    transition-duration: 0.4s;
    cursor: pointer;
    }

    [type=submit] {
        background-color: white; 
        color: black; 
        border: 2px solid blue;
    }

    [type=submit]:hover {
        background-color: blue;
        color: white;
    }
    input:invalid+span:after {
        content: '✖';
        color: black;
        padding-left: 10px;
        position: fixed;
        padding-top: 15px;
    }

    input:valid+span:after {
        content: '✓';
        color: blue;
        padding-left: 10px;
        position: fixed;
        padding-top: 15px;
    }
</style>
<!-- The action attribute of the form refers to a item using its database id -->
<form action="/store/add_day/" method="post" name="form1">
    <table width="25%" border="0">
        <tr>
            <td>Month</td>
            <td>
                <select name="month" id="month">
                    <option value="blank">Select a Month</option>
                    <option value="January">January</option>
                    <option value="February">February</option>
                    <option value="March">March</option>
                    <option value="April">April</option>
                    <option value="May">May</option>
                    <option value="June">June</option>
                    <option value="July">July</option>
                    <option value="August">August</option>
                    <option value="September">September</option>
                    <option value="October">October</option>
                    <option value="November">November</option>
                    <option value="December">December</option>
                </select>
            </td>
        </tr>
        <tr>
            <td>Day</td>
            <td><input type="number" pattern="\b[0-9]\b" name="barcode" min="1" max="31" value="<%= day %>" required/></td>
        </tr>
        <tr>
            <td>Time (enter as format X:XX PM or AM)</td>
            <td><input type="text" pattern="\b[0-9]{1,2}[:]{1}[0-9]{2}[ ]{1}(AM|PM)\b" name="time" value="<%= time %>"></td>
        </tr>
        <tr>
            <td></td>
            <td><input type="submit" name="Submit" value="Add"/></td>
        </tr>
    </table>
    <input type="hidden" name="_method" value="PUT"/>
</form>

