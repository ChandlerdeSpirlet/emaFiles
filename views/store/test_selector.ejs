<!DOCTYPE html>
<html>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Available Tests</title>
    <style>
        * {
            font-family: -apple-system, BlinkMacSystemFont, sans-serif; 
        }
        head {
            padding-bottom: 25px;
        }
        html {
            min-height: 100%;
            background-image: linear-gradient(#0095ff, #9ed7ff);
            -webkit-background-size: cover;
            -moz-background-size: cover;
            -o-background-size: cover;
            background-size: cover;
        }
        h1, h3 {
            text-align: center;
        }
        .wrapper {
            text-align: center;
        }

        button {
            color: black;
            border: 4px solid black;
        }
        
        .button{
            width: 60%;
            align-self: center;
            background-color: transparent;
        }

        button:hover {
            background-color: #555555;
            color: white;
        }
    </style>
    <head>
        <h1>Available Tests</h1>
        <h3>Tests for <%= date_selected %></h3>
    </head>
    <body>
        <div class="wrapper">
        <% if (data) { %>
            <% if (data.length == 0) { %><h2>No Test Today!</h2> <% } %>
            <% else { %>
            <% data.forEach(function(item){ %>
                <a href="/store/test_details/<%= item.id %>/<%= date_selected %>/<%= item.level %>/<%= item.time_num %>"><button class="button"><br>
                <h2 style="font-size: xx-large;"><% if (item.level == -1) {%> Little Dragons 
                                                <% } else if (item.level == 0) { %> Basic 
                                                <% } else if (item.level == 1 ) { %> Level 1 
                                                <% } else if (item.level == 2) { %> Level 2 
                                                <% } else if (item.level == 3) { %> Level 3 
                                                <% } else if (item.level == 4) { %> Weapons
                                                <% } else { %> Unrecognizable Level Data <% } %></h2>
                    <h3 style="font-size: x-large;"><%= item.time_num %> &mdash; Student Count: <%= item.count %></h3>
                </button></a><br>
            <% }) %>
            <% } %>
        <% } else { %>
            No tests can be found. Contact a system administrator. Error: c_s:Class
        <% } %>
        </div>
    </body>
</html>