<!DOCTYPE html>
<html>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Available Classes</title>
    <style>
        * {
            font-family: -apple-system, BlinkMacSystemFont, sans-serif; 
        }
        head {
            padding-bottom: 25px;
        }
        html {
            min-height: 100%;
            background-image: linear-gradient(#0095ff, #9ed7ff);
            -webkit-background-size: cover;
            -moz-background-size: cover;
            -o-background-size: cover;
            background-size: cover;
        }
        h1, h3 {
            text-align: center;
        }
        .wrapper {
            text-align: center;
        }

        button {
            color: black;
            border: 4px solid black;
        }
        
        .button{
            width: 60%;
            align-self: center;
            background-color: transparent;
        }

        button:hover {
            background-color: #555555;
            color: white;
        }
    </style>
    <head>
        <h1>Available Classes</h1>
        <h3>Classes for <%= date_selected %></h3>
    </head>
    <body>
        <div class="wrapper">
        <% if (data) { %>
            <% data.forEach(function(class){ %>
                <a href="/class_checkin/<%= class.id %>/<%= date_selected %>/<%= class.level %>/<%= class.time_num %>"><button class="button"><br>
                <h2 style="font-size: xx-large;"><% if (class.level == 0) {%> Little Dragons 
                                                <% } else if (class.level == 0.5) { %> Basic 
                                                <% } else if (class.level == 0.8) { %> Basic, Floor 2 
                                                <% } else if (class.level == 1 ) { %> Level 1 
                                                <% } else if (class.level == 1.5) { %> Level 1, Floor 2 
                                                <% } else if (class.level == 2) { %> Level 2 
                                                <% } else if (class.level == 3) { %> Level 3 
                                                <% } else if (class.level == 3.5) { %> Prep Class
                                                <% } else if (class.level == 4) { %> Black Belt
                                                <% } else if (class.level == 6) { %> Weapons
                                                <% } else if (class.level == 4) { %> Open Mat
                                                <% } else { %> Unrecognizable Level Data <% } %></h2>
                    <h3 style="font-size: x-large;"><%= class.time_num %></h3> &mdash; Student Count: <%= class.count %></h3>
                </button></a><br>
            <% } %>
        <% } else { %>
            No classes can be found. Contact a system administrator. Error: c_s:Class
        <% } %>
        </div>
    </body>
</html>
<% endblock %>